#!/usr/bin/env bash
# Function to display information about a subdomain
display_info() {
    local sub_domain="$1"
    local domain="$2"
    local record_type="$3"
    local destination="$4"
    
    echo "The subdomain ${sub_domain} is a ${record_type} record and points to ${destination}"
}

# Function to perform DNS query and extract information
query_dns() {
    local sub_domain="$1"
    local domain="$2"

    # Perform DNS query using dig and extract relevant information
    dig_output=$(dig "${sub_domain}.${domain}" | awk '/IN\s+A/{print $5}')

    if [ -z "$dig_output" ]; then
        echo "No record found for ${sub_domain}"
    else
        echo "The subdomain ${sub_domain} is a A record and points to ${dig_output}"
    fi
}

# Main script
if [ "$#" -eq 1 ]; then
    # When only the domain parameter is provided
    subdomains=("www" "lb-01" "web-01" "web-02")

    for sub_domain in "${subdomains[@]}"; do
        query_dns "${sub_domain}" "$1"
    done
elif [ "$#" -eq 2 ]; then
    # When both domain and subdomain parameters are provided
    query_dns "$2" "$1"
else
    echo "Usage: $0 <domain> [subdomain]"
    exit 1
fi
